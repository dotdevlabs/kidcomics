<div class="max-w-4xl mx-auto p-6">
  <div class="mb-6">
    <%= link_to ai_child_profile_book_story_generation_path(@child_profile, @book, @story_generation),
        class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 mb-4" do %>
      <%= icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Story Generation
    <% end %>

    <h1 class="text-3xl font-bold text-gray-900">Page <%= @page_generation.page_number %></h1>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: @page_generation,
        url: ai_child_profile_book_story_generation_page_generation_path(@child_profile, @book, @story_generation, @page_generation),
        method: :patch,
        class: "space-y-6" do |form| %>

      <div>
        <%= form.label :narration_text, "Narration", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :narration_text,
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Dialogue</label>
        <div class="space-y-2">
          <% if @page_generation.dialogue_data.present? %>
            <% @page_generation.dialogue_data.each_with_index do |dialogue, index| %>
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="font-medium text-sm text-gray-700 mb-1"><%= dialogue["character"] %></div>
                <div class="text-gray-600">"<%= dialogue["text"] %>"</div>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500">No dialogue for this page.</p>
          <% end %>
        </div>
      </div>

      <% if @page_generation.prompt.present? %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Illustration Prompt</label>
          <div class="bg-gray-50 rounded-lg p-3 text-sm text-gray-700">
            <%= @page_generation.prompt %>
          </div>
        </div>
      <% end %>

      <div class="flex items-center justify-between pt-4 border-t">
        <%= link_to "Cancel", ai_child_profile_book_story_generation_path(@child_profile, @book, @story_generation),
            class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
        <div class="space-x-3">
          <%= button_to "Regenerate Page",
              regenerate_ai_child_profile_book_story_generation_page_generation_path(@child_profile, @book, @story_generation, @page_generation),
              method: :post,
              class: "inline-block px-4 py-2 text-sm font-medium text-blue-600 hover:text-blue-700" %>
          <%= form.submit "Save Changes",
              class: "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
