<div class="max-w-6xl mx-auto p-6">
  <div class="mb-6">
    <%= link_to child_profile_book_path(@child_profile, @book),
        class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 mb-4" do %>
      <%= icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Book
    <% end %>

    <h1 class="text-3xl font-bold text-gray-900">Story Generation</h1>
    <p class="mt-2 text-gray-600"><%= @book.title %></p>
  </div>

  <!-- Status Card -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold">Generation Status</h2>
      <span class="px-3 py-1 rounded-full text-sm font-medium
        <%= case @story_generation.status
            when 'pending', 'analyzing_drawings', 'generating_story', 'generating_illustrations'
              'bg-blue-100 text-blue-800'
            when 'completed'
              'bg-green-100 text-green-800'
            when 'failed'
              'bg-red-100 text-red-800'
            end %>">
        <%= @story_generation.status.humanize %>
      </span>
    </div>

    <% if @story_generation.status_failed? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
        <div class="flex items-start">
          <%= icon "alert-circle", class: "w-5 h-5 text-red-600 mt-0.5 mr-3" %>
          <div class="flex-1">
            <h3 class="text-sm font-medium text-red-800">Generation Failed</h3>
            <p class="mt-1 text-sm text-red-700"><%= @story_generation.error_message %></p>
          </div>
        </div>
        <%= button_to "Retry Generation",
            retry_ai_child_profile_book_story_generation_path(@child_profile, @book, @story_generation),
            method: :post,
            class: "mt-3 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700" %>
      </div>
    <% end %>

    <% unless @story_generation.status_completed? || @story_generation.status_failed? %>
      <div class="space-y-4">
        <div class="flex items-center justify-between text-sm">
          <span class="text-gray-600">Progress</span>
          <span class="font-medium text-gray-900"><%= @story_generation.progress_percentage %>%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-blue-600 h-2 rounded-full transition-all duration-500"
               style="width: <%= @story_generation.progress_percentage %>%"></div>
        </div>

        <div class="flex items-center text-sm text-gray-600">
          <%= icon "loader", class: "w-4 h-4 mr-2 animate-spin" %>
          Generating your story... This may take a few minutes.
        </div>
      </div>
    <% end %>

    <% if @story_generation.status_completed? %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="flex items-start">
          <%= icon "circle-check", class: "w-5 h-5 text-green-600 mt-0.5 mr-3" %>
          <div>
            <h3 class="text-sm font-medium text-green-800">Generation Complete!</h3>
            <p class="mt-1 text-sm text-green-700">
              Your story has been generated. You can now review and edit the pages below.
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <% if @story_generation.cost_cents > 0 %>
      <div class="mt-4 pt-4 border-t text-sm text-gray-500">
        Estimated cost: $<%= sprintf("%.2f", @story_generation.cost_cents / 100.0) %>
      </div>
    <% end %>
  </div>

  <!-- Story Outline -->
  <% if @story_generation.story_outline.present? %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Story Outline</h2>
      <div class="prose max-w-none text-gray-700">
        <%= simple_format(@story_generation.story_outline) %>
      </div>
    </div>
  <% end %>

  <!-- Pages -->
  <% if @page_generations.any? %>
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-6">Generated Pages</h2>

      <div class="space-y-6">
        <% @page_generations.each do |page_generation| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:border-gray-300 transition-colors">
            <div class="flex items-start justify-between mb-3">
              <div class="flex items-center">
                <span class="text-lg font-semibold text-gray-900 mr-3">Page <%= page_generation.page_number %></span>
                <span class="px-2 py-1 rounded text-xs font-medium
                  <%= case page_generation.status
                      when 'pending', 'generating'
                        'bg-blue-100 text-blue-800'
                      when 'completed'
                        'bg-green-100 text-green-800'
                      when 'failed'
                        'bg-red-100 text-red-800'
                      end %>">
                  <%= page_generation.status.humanize %>
                </span>
              </div>

              <% if page_generation.status_completed? %>
                <%= button_to "Regenerate",
                    regenerate_ai_child_profile_book_story_generation_page_generation_path(@child_profile, @book, @story_generation, page_generation),
                    method: :post,
                    class: "text-sm text-blue-600 hover:text-blue-700 font-medium" %>
              <% end %>
            </div>

            <% if page_generation.status_completed? %>
              <div class="space-y-3">
                <% if page_generation.narration_text.present? %>
                  <div>
                    <h4 class="text-sm font-medium text-gray-700 mb-1">Narration</h4>
                    <p class="text-gray-600"><%= page_generation.narration_text %></p>
                  </div>
                <% end %>

                <% if page_generation.dialogue_data.present? && page_generation.dialogue_data.any? %>
                  <div>
                    <h4 class="text-sm font-medium text-gray-700 mb-1">Dialogue</h4>
                    <div class="space-y-2">
                      <% page_generation.dialogue_data.each do |dialogue| %>
                        <div class="bg-gray-50 rounded p-2">
                          <span class="font-medium text-sm text-gray-700"><%= dialogue["character"] %>:</span>
                          <span class="text-gray-600 text-sm">"<%= dialogue["text"] %>"</span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <% if page_generation.generation_time_seconds %>
                  <div class="text-xs text-gray-500">
                    Generated in <%= sprintf("%.1f", page_generation.generation_time_seconds) %>s
                  </div>
                <% end %>
              </div>
            <% elsif page_generation.status_failed? %>
              <div class="text-sm text-red-600">
                <%= page_generation.error_message %>
              </div>
            <% else %>
              <div class="flex items-center text-sm text-gray-500">
                <%= icon "loader", class: "w-4 h-4 mr-2 animate-spin" %>
                Generating...
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% unless @story_generation.status_completed? || @story_generation.status_failed? %>
  <script>
    // Auto-refresh page every 5 seconds during generation
    setTimeout(() => {
      window.location.reload();
    }, 5000);
  </script>
<% end %>
