<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin Dashboard" %> - KidComics Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="admin-layout" data-controller="lucide">
    <div class="flex min-h-screen bg-gray-100">
      <!-- Sidebar -->
      <aside class="w-64 bg-gray-900 text-white">
        <div class="p-4">
          <h1 class="text-xl font-bold mb-1">KidComics Admin</h1>
          <p class="text-sm text-gray-400"><%= current_user.name %></p>
        </div>

        <nav class="mt-8">
          <%= link_to admin_root_path, class: "flex items-center px-4 py-3 hover:bg-gray-800 #{current_page?(admin_root_path) ? 'bg-gray-800 border-l-4 border-blue-500' : ''}" do %>
            <i data-lucide="layout-dashboard" class="mr-3 w-5 h-5"></i>
            <span>Dashboard</span>
          <% end %>

          <%= link_to admin_users_path, class: "flex items-center px-4 py-3 hover:bg-gray-800 #{current_page?(admin_users_path) ? 'bg-gray-800 border-l-4 border-blue-500' : ''}" do %>
            <i data-lucide="users" class="mr-3 w-5 h-5"></i>
            <span>Users</span>
          <% end %>

          <%= link_to admin_families_path, class: "flex items-center px-4 py-3 hover:bg-gray-800 #{current_page?(admin_families_path) ? 'bg-gray-800 border-l-4 border-blue-500' : ''}" do %>
            <i data-lucide="home" class="mr-3 w-5 h-5"></i>
            <span>Families</span>
          <% end %>

          <%= link_to admin_content_index_path, class: "flex items-center px-4 py-3 hover:bg-gray-800 #{current_page?(admin_content_index_path) ? 'bg-gray-800 border-l-4 border-blue-500' : ''}" do %>
            <i data-lucide="file-text" class="mr-3 w-5 h-5"></i>
            <span>Content</span>
          <% end %>

          <%= link_to admin_ai_usage_index_path, class: "flex items-center px-4 py-3 hover:bg-gray-800 #{current_page?(admin_ai_usage_index_path) ? 'bg-gray-800 border-l-4 border-blue-500' : ''}" do %>
            <i data-lucide="bar-chart" class="mr-3 w-5 h-5"></i>
            <span>AI Usage</span>
          <% end %>

          <%= link_to admin_audit_logs_path, class: "flex items-center px-4 py-3 hover:bg-gray-800 #{current_page?(admin_audit_logs_path) ? 'bg-gray-800 border-l-4 border-blue-500' : ''}" do %>
            <i data-lucide="shield" class="mr-3 w-5 h-5"></i>
            <span>Audit Log</span>
          <% end %>

          <hr class="my-4 border-gray-700">

          <%= link_to root_path, class: "flex items-center px-4 py-3 hover:bg-gray-800" do %>
            <i data-lucide="arrow-left" class="mr-3 w-5 h-5"></i>
            <span>Back to Site</span>
          <% end %>

          <%= button_to logout_path, method: :delete, class: "w-full flex items-center px-4 py-3 hover:bg-gray-800 text-left" do %>
            <i data-lucide="log-out" class="mr-3 w-5 h-5"></i>
            <span>Logout</span>
          <% end %>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="flex-1 p-8">
        <% if flash[:notice] %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>
      </main>
    </div>
  </body>
</html>
