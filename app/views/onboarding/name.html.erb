<div class="min-h-screen bg-gradient-to-br from-purple-500 to-blue-500 flex items-center justify-center py-8 px-4">
  <div class="bg-white rounded-lg shadow-2xl p-8 w-full max-w-md">
    <!-- Progress Indicator -->
    <div class="mb-6">
      <div class="flex justify-between text-xs text-gray-600 mb-2">
        <span>Step 1 of 3</span>
        <span>33%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full" style="width: 33%"></div>
      </div>
    </div>

    <h1 class="text-3xl font-bold text-center mb-2 text-gray-800">What's Your Name?</h1>
    <p class="text-center text-gray-600 mb-6">We'll use this to personalize your experience</p>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: onboarding_name_path, method: :patch, class: "space-y-6" do |f| %>
      <div>
        <%= label_tag :name, "Your Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag :name, @user.name == "User" ? "" : @user.name,
            required: true,
            autofocus: true,
            placeholder: "Enter your name",
            class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <%= submit_tag "Continue", class: "w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:from-purple-700 hover:to-blue-700 transition duration-200 cursor-pointer" %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-gray-500 text-sm">
        <%= icon "lock", class: "w-4 h-4 inline" %>
        Your information is secure and private
      </p>
    </div>
  </div>
</div>
