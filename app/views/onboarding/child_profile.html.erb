<div class="min-h-screen bg-gradient-to-br from-purple-500 to-blue-500 flex items-center justify-center py-8 px-4">
  <div class="bg-white rounded-lg shadow-2xl p-8 w-full max-w-md">
    <!-- Progress Indicator -->
    <div class="mb-6">
      <div class="flex justify-between text-xs text-gray-600 mb-2">
        <span>Step 2 of 3</span>
        <span>66%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 h-2 rounded-full" style="width: 66%"></div>
      </div>
    </div>

    <h1 class="text-3xl font-bold text-center mb-2 text-gray-800">Create a Child Profile</h1>
    <p class="text-center text-gray-600 mb-6">Who will be creating stories?</p>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with model: @child_profile, url: onboarding_child_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :name, "Child's Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name,
            required: true,
            autofocus: true,
            placeholder: "Enter child's name",
            class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :age, "Age", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :age,
            required: true,
            min: 1,
            max: 18,
            placeholder: "Enter age",
            class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        <p class="text-xs text-gray-500 mt-1">Ages 1-18</p>
      </div>

      <%= f.submit "Continue to Book Creation", class: "w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:from-purple-700 hover:to-blue-700 transition duration-200 cursor-pointer" %>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "Back", onboarding_name_path, class: "text-purple-600 hover:text-purple-800 text-sm" %>
    </div>
  </div>
</div>
