<div class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <h1 class="text-2xl font-bold text-gray-800"><%= @family_account.name %></h1>
        <div class="flex items-center space-x-4">
          <span class="text-gray-600">Welcome, <%= current_user.name %></span>
          <%= button_to "Logout", logout_path, method: :delete, class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition duration-200" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Child Profiles Section -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Child Profiles</h2>
        <%= link_to new_family_account_child_profile_path(@family_account), class: "bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" do %>
          <i data-lucide="plus" class="w-5 h-5 mr-2"></i>
          Add Child
        <% end %>
      </div>

      <% if @family_account.child_profiles.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @family_account.child_profiles.each do |child_profile| %>
            <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition duration-200">
              <div class="flex flex-col items-center">
                <% if child_profile.avatar.attached? %>
                  <%= image_tag child_profile.avatar, class: "w-24 h-24 rounded-full object-cover mb-4" %>
                <% else %>
                  <div class="w-24 h-24 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center mb-4">
                    <span class="text-white text-3xl font-bold"><%= child_profile.name[0].upcase %></span>
                  </div>
                <% end %>

                <h3 class="text-xl font-bold text-gray-800 mb-1"><%= child_profile.name %></h3>
                <p class="text-gray-600 mb-4">Age: <%= child_profile.age %></p>

                <div class="flex space-x-2">
                  <%= link_to edit_family_account_child_profile_path(@family_account, child_profile), class: "bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition duration-200 inline-flex items-center" do %>
                    <i data-lucide="pencil" class="w-4 h-4 mr-1"></i>
                    Edit
                  <% end %>
                  <%= button_to family_account_child_profile_path(@family_account, child_profile), method: :delete, data: { turbo_confirm: "Are you sure you want to delete #{child_profile.name}'s profile?" }, class: "bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition duration-200 inline-flex items-center" do %>
                    <i data-lucide="trash-2" class="w-4 h-4 mr-1"></i>
                    Delete
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg mb-4">No child profiles yet.</p>
          <%= link_to "Add your first child", new_family_account_child_profile_path(@family_account), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
