<div class="min-h-screen bg-gradient-to-br from-purple-500 via-blue-500 to-teal-500">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-16">
    <!-- Header/Navigation -->
    <div class="flex justify-between items-center mb-16">
      <div class="flex items-center space-x-2">
        <%= icon "book-open", class: "w-8 h-8 text-white" %>
        <span class="text-2xl font-bold text-white">KidComics</span>
      </div>
      <div class="flex space-x-4">
        <%= link_to "Log In", login_path, class: "text-white hover:text-gray-200 transition" %>
        <%= link_to "Sign Up", signup_path, class: "bg-white text-purple-600 px-6 py-2 rounded-lg font-semibold hover:bg-gray-100 transition" %>
      </div>
    </div>

    <!-- Hero Content -->
    <div class="max-w-4xl mx-auto text-center text-white mb-16">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        Bring Your Child's Stories to Life
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-blue-100">
        Create magical illustrated storybooks powered by AI. Turn your child's imagination into beautiful comics in minutes.
      </p>

      <!-- Email Signup Form -->
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-2xl p-6">
        <%= form_with url: onboarding_start_path, method: :post, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :email, "Start Creating - Just Enter Your Email", class: "block text-gray-800 font-semibold mb-2 text-center" %>
            <%= f.email_field :email, required: true, placeholder: "your@email.com",
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent text-gray-800",
                autofocus: true %>
          </div>
          <%= f.submit "Create Your First Book", class: "w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:from-purple-700 hover:to-blue-700 transition duration-200 cursor-pointer" %>
          <p class="text-xs text-gray-600 text-center">
            No credit card required. Create your first 5-page book for free.
          </p>
        <% end %>
      </div>
    </div>

    <!-- Features Grid -->
    <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-8 mb-16">
      <!-- Feature 1 -->
      <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6 text-white">
        <div class="bg-white/20 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
          <%= icon "sparkles", class: "w-6 h-6" %>
        </div>
        <h3 class="text-xl font-bold mb-2">AI-Powered Magic</h3>
        <p class="text-blue-100">
          Our AI helps create engaging stories and beautiful illustrations tailored to your child's interests.
        </p>
      </div>

      <!-- Feature 2 -->
      <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6 text-white">
        <div class="bg-white/20 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
          <%= icon "image", class: "w-6 h-6" %>
        </div>
        <h3 class="text-xl font-bold mb-2">Upload Your Art</h3>
        <p class="text-blue-100">
          Use your child's drawings or let AI generate illustrations. Mix and match for unique stories.
        </p>
      </div>

      <!-- Feature 3 -->
      <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6 text-white">
        <div class="bg-white/20 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
          <%= icon "book-heart", class: "w-6 h-6" %>
        </div>
        <h3 class="text-xl font-bold mb-2">Digital Library</h3>
        <p class="text-blue-100">
          Build a growing collection of personalized storybooks your family can enjoy anytime.
        </p>
      </div>
    </div>

    <!-- Benefits Section -->
    <div class="max-w-4xl mx-auto bg-white/10 backdrop-blur-lg rounded-lg p-8 text-white mb-16">
      <h2 class="text-3xl font-bold text-center mb-8">Why Parents Love KidComics</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="flex items-start space-x-3">
          <%= icon "check-circle", class: "w-6 h-6 flex-shrink-0 mt-1" %>
          <div>
            <h4 class="font-semibold mb-1">Encourages Creativity</h4>
            <p class="text-blue-100 text-sm">Help your child develop storytelling skills and imagination.</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <%= icon "check-circle", class: "w-6 h-6 flex-shrink-0 mt-1" %>
          <div>
            <h4 class="font-semibold mb-1">Screen Time with Purpose</h4>
            <p class="text-blue-100 text-sm">Turn screen time into creative, educational experiences.</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <%= icon "check-circle", class: "w-6 h-6 flex-shrink-0 mt-1" %>
          <div>
            <h4 class="font-semibold mb-1">Build Reading Confidence</h4>
            <p class="text-blue-100 text-sm">Kids love reading stories they helped create.</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <%= icon "check-circle", class: "w-6 h-6 flex-shrink-0 mt-1" %>
          <div>
            <h4 class="font-semibold mb-1">Family Bonding</h4>
            <p class="text-blue-100 text-sm">Create stories together and build lasting memories.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- How It Works -->
    <div class="max-w-4xl mx-auto text-center text-white">
      <h2 class="text-3xl font-bold mb-8">Get Started in Minutes</h2>
      <div class="grid md:grid-cols-4 gap-6">
        <div>
          <div class="bg-white/20 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            1
          </div>
          <h4 class="font-semibold mb-2">Enter Email</h4>
          <p class="text-blue-100 text-sm">No password needed to start</p>
        </div>
        <div>
          <div class="bg-white/20 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            2
          </div>
          <h4 class="font-semibold mb-2">Add Child Profile</h4>
          <p class="text-blue-100 text-sm">Tell us about your young author</p>
        </div>
        <div>
          <div class="bg-white/20 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            3
          </div>
          <h4 class="font-semibold mb-2">Create First Book</h4>
          <p class="text-blue-100 text-sm">Up to 5 pages for free</p>
        </div>
        <div>
          <div class="bg-white/20 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            4
          </div>
          <h4 class="font-semibold mb-2">Complete Setup</h4>
          <p class="text-blue-100 text-sm">Verify email and set password</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="bg-black/20 backdrop-blur-lg">
    <div class="container mx-auto px-4 py-8 text-center text-white">
      <p class="text-sm text-blue-100">
        &copy; 2026 KidComics. Bringing imagination to life.
      </p>
    </div>
  </div>
</div>
