<div class="bg-gray-50 border-b border-gray-200 py-4" data-controller="lucide">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <!-- Search Input -->
      <div class="flex-1 max-w-2xl">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i data-lucide="search" class="w-5 h-5 text-gray-400"></i>
          </div>
          <input
            type="text"
            placeholder="Search clubs, locations, or features..."
            class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
        </div>
      </div>

      <!-- Filters and Results -->
      <div class="flex items-center gap-4">
        <button class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <i data-lucide="menu" class="w-4 h-4 mr-2"></i>
          Filters
        </button>
        <span class="text-sm text-gray-600 whitespace-nowrap">
          <%= "1-#{@clubs.size} of #{@clubs.size} clubs" %>
        </span>
      </div>
    </div>
  </div>
</div>
