<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-500 to-pink-500">
  <div class="bg-white rounded-lg shadow-xl p-8 w-full max-w-md">
    <h1 class="text-3xl font-bold text-center mb-6 text-gray-800">Parent Login</h1>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= label_tag :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= email_field_tag :email, params[:email], required: true, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= label_tag :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= password_field_tag :password, nil, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <%= submit_tag "Log In", class: "w-full bg-purple-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-purple-700 transition duration-200" %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-gray-600">
        Don't have an account?
        <%= link_to "Sign up", signup_path, class: "text-purple-600 hover:text-purple-800 font-semibold" %>
      </p>
    </div>
  </div>
</div>
