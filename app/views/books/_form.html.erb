<%= form_with(model: [@child_profile, @book], local: true, class: "space-y-6") do |form| %>
  <% if @book.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h3 class="font-bold mb-2"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      <ul class="list-disc list-inside">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent", placeholder: "Enter book title" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent", placeholder: "What is this book about?" %>
  </div>

  <div>
    <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :status, [['Draft', 'draft'], ['Published', 'published']], {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
  </div>

  <div class="flex space-x-3">
    <%= form.submit class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 cursor-pointer" %>
    <%= link_to "Cancel", @book.persisted? ? child_profile_book_path(@child_profile, @book) : child_profile_books_path(@child_profile), class: "bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-200 inline-block" %>
  </div>
<% end %>
