<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-800"><%= @child_profile.name %>'s Books</h1>
          <p class="text-gray-600 mt-1">Create and manage your comic books</p>
        </div>
        <div class="flex items-center space-x-3">
          <!-- View Mode Toggle -->
          <div class="flex items-center bg-gray-100 rounded-lg p-1">
            <%= link_to child_profile_books_path(@child_profile, params.permit(:search, :status, :favorited, :date_from, :date_to, :sort).merge(view_mode: 'grid')),
                class: "px-3 py-2 rounded transition #{@view_mode == 'grid' ? 'bg-white shadow-sm' : 'text-gray-600 hover:text-gray-800'}" do %>
              <%= icon "layout-grid", class: "w-4 h-4" %>
            <% end %>
            <%= link_to child_profile_books_path(@child_profile, params.permit(:search, :status, :favorited, :date_from, :date_to, :sort).merge(view_mode: 'list')),
                class: "px-3 py-2 rounded transition #{@view_mode == 'list' ? 'bg-white shadow-sm' : 'text-gray-600 hover:text-gray-800'}" do %>
              <%= icon "list", class: "w-4 h-4" %>
            <% end %>
          </div>

          <%= link_to new_child_profile_book_path(@child_profile), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" do %>
            <%= icon "camera", class: "w-5 h-5 mr-2" %>
            Start with a Drawing
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Statistics -->
    <%= render "statistics", statistics: @statistics %>

    <!-- Filters -->
    <%= render "filters", show_child_filter: false %>

    <!-- Books List -->
    <%= turbo_frame_tag "books_list" do %>
      <% if @books.any? %>
        <div class="<%= @view_mode == 'grid' ? 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6' : 'space-y-4' %>">
          <% @books.each do |book| %>
            <%= render "book_card", book: book, child_profile: @child_profile, show_child_info: false %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
          <div class="mb-4">
            <%= icon "book-open", class: "w-16 h-16 mx-auto text-gray-400" %>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">No books found</h3>
          <% if params[:search].present? || params[:status].present? || params[:favorited].present? || params[:date_from].present? || params[:date_to].present? %>
            <p class="text-gray-600 mb-6">Try adjusting your filters to see more results.</p>
            <%= link_to child_profile_books_path(@child_profile), class: "bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-200 inline-flex items-center" do %>
              <%= icon "x", class: "w-5 h-5 mr-2" %>
              Clear Filters
            <% end %>
          <% else %>
            <p class="text-gray-600 mb-6">Start creating your first comic book!</p>
            <%= link_to new_child_profile_book_path(@child_profile), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" do %>
              <%= icon "camera", class: "w-5 h-5 mr-2" %>
              Start Your First Story
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
