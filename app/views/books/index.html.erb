<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-800"><%= @child_profile.name %>'s Books</h1>
          <p class="text-gray-600 mt-1">Create and manage your comic books</p>
        </div>
        <%= link_to new_child_profile_book_path(@child_profile), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" do %>
          <i data-lucide="plus" class="w-5 h-5 mr-2"></i>
          Create New Book
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if @books.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @books.each do |book| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-200">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-800 flex-1"><%= book.title %></h3>
                <span class="ml-2 px-3 py-1 text-xs font-semibold rounded-full <%= book.status == 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= book.status.capitalize %>
                </span>
              </div>

              <% if book.description.present? %>
                <p class="text-gray-600 mb-4 line-clamp-3"><%= book.description %></p>
              <% end %>

              <div class="flex items-center text-sm text-gray-500 mb-4">
                <i data-lucide="image" class="w-4 h-4 mr-1"></i>
                <span><%= pluralize(book.drawings.count, 'drawing') %></span>
              </div>

              <div class="flex space-x-2">
                <%= link_to child_profile_book_path(@child_profile, book), class: "flex-1 bg-blue-500 text-white px-4 py-2 rounded text-center hover:bg-blue-600 transition duration-200" do %>
                  View
                <% end %>
                <%= link_to edit_child_profile_book_path(@child_profile, book), class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300 transition duration-200 inline-flex items-center" do %>
                  <i data-lucide="pencil" class="w-4 h-4"></i>
                <% end %>
                <%= button_to child_profile_book_path(@child_profile, book), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this book?" }, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition duration-200 inline-flex items-center" do %>
                  <i data-lucide="trash-2" class="w-4 h-4"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <div class="mb-4">
          <i data-lucide="book-open" class="w-16 h-16 mx-auto text-gray-400"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-800 mb-2">No books yet</h3>
        <p class="text-gray-600 mb-6">Start creating your first comic book!</p>
        <%= link_to new_child_profile_book_path(@child_profile), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" do %>
          <i data-lucide="plus" class="w-5 h-5 mr-2"></i>
          Create Your First Book
        <% end %>
      </div>
    <% end %>
  </div>
</div>
