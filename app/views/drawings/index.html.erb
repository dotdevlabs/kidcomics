<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <div class="flex items-center mb-2">
            <%= link_to child_profile_book_path(@child_profile, @book), class: "text-gray-600 hover:text-gray-800 mr-3" do %>
              <i data-lucide="arrow-left" class="w-5 h-5"></i>
            <% end %>
            <h1 class="text-3xl font-bold text-gray-800">Manage Drawings</h1>
          </div>
          <p class="text-gray-600">Reorder, edit, or delete drawings for "<%= @book.title %>"</p>
        </div>
        <%= link_to new_child_profile_book_drawing_path(@child_profile, @book), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" do %>
          <i data-lucide="upload" class="w-5 h-5 mr-2"></i>
          Upload More
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-md p-6">
      <% if @drawings.any? %>
        <div class="mb-4 flex items-center text-sm text-gray-600">
          <i data-lucide="info" class="w-4 h-4 mr-2"></i>
          <span>Drag and drop to reorder drawings</span>
        </div>

        <div data-controller="drawings-reorder"
             data-drawings-reorder-url-value="<%= child_profile_book_path(@child_profile, @book) %>"
             class="space-y-3">
          <% @drawings.each do |drawing| %>
            <%= render "drawing", drawing: drawing, child_profile: @child_profile, book: @book %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="mb-4">
            <i data-lucide="image" class="w-16 h-16 mx-auto text-gray-400"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">No drawings yet</h3>
          <p class="text-gray-600 mb-6">Upload your drawings to get started!</p>
          <%= link_to new_child_profile_book_drawing_path(@child_profile, @book), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition duration-200 inline-flex items-center" do %>
            <i data-lucide="upload" class="w-5 h-5 mr-2"></i>
            Upload Drawings
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
