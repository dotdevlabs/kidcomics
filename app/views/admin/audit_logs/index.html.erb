<% content_for :title, "Audit Log" %>

<h1 class="text-3xl font-bold mb-6">Admin Audit Log</h1>

<!-- Filters -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: admin_audit_logs_path, method: :get, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |f| %>
    <%= f.select :admin_id, options_for_select([["All Admins", ""]] + @admins.map { |a| [a.name, a.id] }, params[:admin_id]), {}, class: "border rounded px-3 py-2" %>
    <%= f.select :action_type, options_for_select([["All Actions", ""]] + @action_types.map { |t| [t.humanize, t] }, params[:action_type]), {}, class: "border rounded px-3 py-2" %>
    <%= f.date_field :date_from, placeholder: "From Date", value: params[:date_from], class: "border rounded px-3 py-2" %>
    <%= f.date_field :date_to, placeholder: "To Date", value: params[:date_to], class: "border rounded px-3 py-2" %>
    <div class="md:col-span-4">
      <%= f.submit "Filter", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>

<!-- Audit Log Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Admin</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Target</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">IP Address</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @admin_actions.each do |action| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= action.created_at.strftime("%Y-%m-%d %H:%M") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <%= link_to action.admin_user.name, admin_user_path(action.admin_user), class: "text-blue-600 hover:underline" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
              <%= action.action_type.humanize %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <% if action.target.present? %>
              <%= action.target_type %> #<%= action.target_id %>
            <% else %>
              <span class="text-gray-400">-</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= action.ip_address || "-" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @admin_actions.empty? %>
  <div class="text-center py-12 text-gray-500">
    No audit log entries found.
  </div>
<% end %>
