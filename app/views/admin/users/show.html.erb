<% content_for :title, @user.name %>

<div class="mb-6">
  <%= link_to admin_users_path, class: "text-blue-600 hover:underline" do %>
    <i data-lucide="arrow-left" class="inline w-4 h-4"></i> Back to Users
  <% end %>
</div>

<h1 class="text-3xl font-bold mb-6"><%= @user.name %></h1>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- User Info -->
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">User Information</h2>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch, class: "space-y-4" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700">Name</label>
          <%= f.text_field :name, class: "mt-1 block w-full border rounded px-3 py-2" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Email</label>
          <%= f.email_field :email, class: "mt-1 block w-full border rounded px-3 py-2" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Role</label>
          <%= f.select :role, User.roles.keys.map { |k| [k.titleize, k] }, {}, class: "mt-1 block w-full border rounded px-3 py-2" %>
        </div>
        <div class="flex gap-4">
          <%= f.submit "Update User", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>

    <!-- Family Account -->
    <% if @family_account.present? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Family Account</h2>
        <p class="text-gray-700 mb-2"><strong>Name:</strong> <%= @family_account.name || "Not set" %></p>
        <p class="text-gray-700 mb-2"><strong>Child Profiles:</strong> <%= @child_profiles.count %></p>
        <%= link_to "View Family", admin_family_path(@family_account), class: "text-blue-600 hover:underline" %>
      </div>
    <% end %>

    <!-- Recent Books -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Recent Books</h2>
      <% if @books.any? %>
        <div class="space-y-2">
          <% @books.each do |book| %>
            <div class="flex justify-between items-center py-2 border-b">
              <div>
                <p class="font-medium"><%= book.title %></p>
                <p class="text-sm text-gray-500"><%= book.status.titleize %></p>
              </div>
              <%= link_to "View", admin_content_path(book), class: "text-blue-600 hover:underline text-sm" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No books yet.</p>
      <% end %>
    </div>
  </div>

  <!-- Stats Sidebar -->
  <div class="space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Stats</h2>
      <div class="space-y-3">
        <div>
          <p class="text-sm text-gray-600">Member Since</p>
          <p class="font-bold"><%= @user.created_at.strftime("%B %d, %Y") %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Total Books</p>
          <p class="font-bold"><%= @books.count %></p>
        </div>
      </div>
    </div>

    <!-- Admin Actions -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Quick Actions</h2>
      <div class="space-y-2">
        <%= button_to "Suspend User", suspend_admin_user_path(@user), method: :patch, data: { confirm: "Are you sure?" }, class: "w-full bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
      </div>
    </div>

    <!-- Admin Action Log -->
    <% if @admin_actions.any? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Recent Admin Actions</h2>
        <div class="space-y-2">
          <% @admin_actions.each do |action| %>
            <div class="py-2 border-b">
              <p class="text-sm"><%= action.action_type.humanize %></p>
              <p class="text-xs text-gray-500">by <%= action.admin_user.name %></p>
              <p class="text-xs text-gray-500"><%= time_ago_in_words(action.created_at) %> ago</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
